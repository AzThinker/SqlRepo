<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>1.0.8</VersionPrefix>
    <TargetFrameworks>netstandard1.6;net452</TargetFrameworks>
    <AssemblyName>SqlRepo</AssemblyName>
    <PackageId>SqlRepo</PackageId>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <Authors>Mike Hanson &amp; Mark Eastwood</Authors>
    <Description>SQL Repo core components and interfaces.  Supports implementation of SQL command builders that are made available within an implementation of the Repository pattern.</Description>
    <PackageProjectUrl>http://github.com/testpossessed/sqlrepo</PackageProjectUrl>
    <PackageTags>sql, repository, builder</PackageTags>
    <Version>1.0.8</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PreBuildEvent>del   /S /Q  "$(ProjectDir)"*.nupkg</PreBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.3.0" Condition="'$(TargetFramework)' == 'netstandard1.6'" />
  </ItemGroup>

  <Target Name="PostcompileScript" AfterTargets="Build">
    <Exec Command="dotnet pack --no-build --configuration $(Configuration)" />
  </Target>

</Project>
